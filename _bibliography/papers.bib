journal = {IEICE Transactions on Information and Systems},
keywords = {Deep neural networks,Deformed kana recognition,Handwriting recognition,Historical documents},
number = {8},
pages = {1554--1564},
title = {{Recognition of anomalously deformed kana sequences in Japanese historical documents}},
volume = {E102D},
year = {2019}
}
