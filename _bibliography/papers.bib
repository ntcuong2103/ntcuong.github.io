journal = {Pattern Analysis and Applications},
keywords = {Candidate lattice,Handwritten text recognition,Online recognition,Overlaid handwriting,SVM classification,Semi-incremental recognition},
number = {1},
pages = {233--241},
title = {{An online overlaid handwritten Japanese text recognition system for small tablet}},
url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-85053680450{\&}doi=10.1007{\%}2Fs10044-018-0746-8{\&}partnerID=40{\&}md5=65353e3c575673f57cd8b0e3a8089c2b},
volume = {22},
year = {2019}
